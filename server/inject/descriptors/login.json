{
  "type": "object",
  "comment": "Login",
  "properties": {
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": "[name=\"log_in\"]",
      "control": "action.button"
    },
    "flex_user_code": {
      "type": "string",
      "control": "text",
      "selector": "[name=\"flex_user_code\"]"
    },
    "psswd": {
      "type": "string",
      "selector": "[name=\"psswd\"]",
      "control": "text"
    },
    "isLogin": {
      "type": "identifier",
      "control": "exists",
      "selector": "[name=\"login_form\"]"
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
