{
  "type": "object",
  "comment": "Login",
  "properties": {
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": "[name=\"log_in\"]",
      "control": "action.button"
    },
    "flex_user_code": {
      "type": "string",
      "control": "text",
      "selector": "[name=\"flex_user_code\"]"
    },
    "psswd": {
      "type": "string",
      "selector": "[name=\"psswd\"]",
      "control": "text"
    },
    "isLogin": {
      "type": "identifier",
      "control": "exists",
      "selector": "[name=\"login_form\"]"
    },
    "error_message": {
      "type": "string",
      "selector": "html",
      "control": "property.innerText"
    },
    "people_list": {
      "type": "array",
      "selectorAll": "table",
      "items": {
        "type": "object",
        "properties": {
          "inner_inner_list": {
            "type": "array",
            "selectorAll": "tr",
            "items": {
              "type": "object",
              "properties": {
                "inner_inner_inner_list": {
                  "type": "array",
                  "selectorAll": "td",
                  "items": {
                    "type": "object",
                    "properties": {}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
