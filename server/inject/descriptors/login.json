{
  "type": "object",
  "comment": "Login",
  "properties": {
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": "[name=\"log_in\"]",
      "control": "action.button"
    },
    "flex_user_code": {
      "type": "string",
      "control": "text",
      "selector": "[name=\"flex_user_code\"]"
    },
    "psswd": {
      "type": "string",
      "selector": "[name=\"psswd\"]",
      "control": "text"
    },
    "isLogin": {
      "type": "identifier",
      "control": "exists",
      "selector": "[name=\"login_form\"]"
    },
    "error_message": {
      "type": "string",
      "selector": "html",
      "control": "property.innerText"
    },
    "my_ais": {
      "type": "array",
      "selectorAll": ".layer_data",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "action",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 1
          }
        }
      }
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
